@model ReportOverviewApp.Models.ReportViewModels.ReportViewModel

@{
    ViewData["Title"] = "SelectPlan";
}

<h2 class="page-header">Select A Plan</h2>
<div class="container">
    <div class="row">
        <h4 class="col-md-2">Choose State</h4>
        <h4 class="col-md-10">Choose Plan</h4>
    </div>
    <form>
        <div class="row">
            <div class="col-md-2 list-group">
                @foreach (var stateItem in Model.States)
                {
                    @Html.ActionLink(stateItem, "SelectPlan", new {state = @stateItem}, new { @class = "list-group-item list-group-item-action" })   
                }
            </div>
            <div class="col-md-10 list-group">
                @foreach (var planItem in Model.Plans)
                {
                    @Html.ActionLink(planItem, "Index", new {plan = @planItem}, new { @class = "list-group-item list-group-item-action" })
                }
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}