<div class="container">
    <div class="row">
        <h4 class="col-lg-3">Choose State</h4>
        <h4 class="col-lg-9">Choose Plan</h4>
    </div>
    <form>
        <div class="row">
            <div class="col-sm-3 list-group">
                @foreach (var stateItem in Model.States)
            {
                    
                            @Html.ActionLink(stateItem, "SelectPlan", new {state = @stateItem}, new { @class = "list-group-item list-group-item-action" })
                    
                }
            </div>
            <div class="col-sm-9 list-group">
                @foreach (var planItem in Model.Plans)
            {
                    
                            @Html.ActionLink(planItem, "Index", new {plan = @planItem}, new { @class = "list-group-item list-group-item-action" })
                    
                }
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}