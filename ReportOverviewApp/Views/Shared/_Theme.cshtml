@using Microsoft.AspNetCore.Identity
@using ReportOverviewApp.Models

@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager
@if (SignInManager.IsSignedIn(User))
{
    switch (UserManager.FindByNameAsync(User.Identity.Name).Result.Theme)
    {
        case ApplicationUser.Themes.Dark:
            <link rel="stylesheet" id="darkTheme" href="~/css/dark-theme.css" />
            break;
        case ApplicationUser.Themes.Light:
            //default theme//
            <link rel="stylesheet" id="lightTheme" />
            break;
    }
}