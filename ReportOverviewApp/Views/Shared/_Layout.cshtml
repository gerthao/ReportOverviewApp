<body>
    <nav class="navbar navbar-expand-lg fixed-top navbar-dark bg-dark">
        <div class="container-fluid">
            <div class="navbar-header">
                @if (User.Identity.IsAuthenticated)
                {
                    <button class="navbar-toggler navbar-toggler-up" type="button" style="padding: 2px 4px 2px 4px;"  data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                }
                else
                {
                    <button class="text-hide" type="button" style="padding: 2px 4px 2px 4px;">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                }
                <span class="navbar navbar-text px-md-4">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">Report Tracker</a>
                </span>
            </div>
            @if (User.Identity.IsAuthenticated)
            {
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            @Html.ActionLink("Upcoming Reports", "..\\Reports", new { begin = DateTime.Today, end = DateTime.Today.AddDays(14) }, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Reports" asp-action="SelectPlan">Select Plan</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Reports" asp-action="Index">Reporting Catalogue</a>
                        </li>
                    </ul>
                    @await Html.PartialAsync("_LoginPartial")
                </div>

            }
        </div>
    </nav>
