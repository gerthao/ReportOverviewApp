@model ReportOverviewApp.Models.WidgetModels.IWidget

<div class="widget">
    <div class="thumbnail">
        <button type="button" class="btn btn-default" data-toggle="dropdown" aria-haspopup="true">
            <span class="glyphyicon glyphicon-menu-hamburger widget-option-menu"></span>
        </button>
        <ul class="dropdown-menu widget-menu">
            @foreach(var option in Model.Options){
                <li><a href="#">@option.ToString()</a></li>
            }
        </ul>
        <div class="caption caption-widget subwidget">
            @*@Html.Partial(string.Concat(new[] { "Widget", "/", "_SubWidget" }), Model.Body)*@
            <h3>@Model.Body.Topic</h3>
            <h1>@Model.Body.Description</h1>
        </div>
    </div>
</div>